{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module":"es6",
    "lib": ["es2016", "es2017", "es2018", "dom"],
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
